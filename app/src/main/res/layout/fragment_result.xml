<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="finder.flight.gr.flightfinderv02.ResultActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/relative_layout1">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/image1"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/image2"
                android:scaleType="centerCrop"
                android:scaleX="-1"/>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OverlayText"
            android:id="@+id/desc1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OverlayText"
            android:id="@+id/temp1"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/desc1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OverlayText"
            android:id="@+id/desc2"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OverlayText"
            android:id="@+id/temp2"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/desc2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/paula"
            style="@style/OverlayText"/>

        <TextView
            android:id="@+id/list_text_view_origin_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/paula"
            style="@style/OverlayText"/>

        <TextView
            android:id="@+id/list_text_view_dest_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/paula"
            style="@style/OverlayText"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listview_flights"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

